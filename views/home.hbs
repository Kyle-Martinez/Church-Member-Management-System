<html>
    <head>
        <title>iFAE Concerns Table</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
        <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="/js/home.js"></script>
        <link rel="stylesheet" href="/css/home.css" />
    </head>
    <body>
        <div class="container-fluid h-100 d-flex flex-column">
            {{> navbar}}
            <div class="row h-100  mx-1">
                <div class="col-12 d-flex flex-column ">
                    <div class="row mb-2" style="height:5%">
                        <h2>iFAE Concerns Table</h2>
                    </div>
                    <div class="row mb-2">
                        <div class="col" id="filters">
                            <div class="row">
                                <button class="btn w-100 row border border-secondary rounded mx-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapsible_filter" aria-expanded="false" aria-controls="#collapsible_filter">
                                    <h5 class="m-0">Show Filters</h5>
                                </button>
                            </div>
                            <div class="row border rounded collapse" id="collapsible_filter">
                                <div class="col-md-12 col-lg-2 mb-4">
                                    <b><label for="property" class="form-label">Property:</label></b>
                                    <div class="dropdown">
                                        <button class="w-100 btn btn-secondary dropdown-toggle" type="button" id="property_dropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Choose Property
                                        </button>
                                        <ul class="w-100 dropdown-menu row" aria-labelledby="property_dropdown" style="max-height: 1000%; overflow-y: scroll;">
                                        {{#each property}}
                                            <li><input type="checkbox" name="property" id="property-{{id}}" value="{{id}}" class=" col-1 form-check-input"><label for="property-{{id}}" class="form-check-label col-11 d-inline-block text-truncate">{{property}}</label></li>
                                        {{/each}}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-2 mb-4">
                                    <b><label for="ifaecategory" class="form-label">iFAE Category:</label></b>
                                    <div class="dropdown">
                                        <button class="w-100 btn btn-secondary dropdown-toggle" type="button" id="ifaecategory_dropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Choose Category
                                        </button>
                                        <ul class="w-100 dropdown-menu row" aria-labelledby="ifaecategory_dropdown" style="max-height: 1000%; overflow-y: scroll;">
                                        {{#each ifaecategory}}
                                            <li><input type="checkbox" name="ifaecategory" id="ifaecategory-{{id}}" value="{{id}}" class=" col-1 form-check-input"><label for="qaqc-{{id}}" class="form-check-label col-11 d-inline-block text-truncate">{{shorthand}}</label></li>
                                        {{/each}}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-2 mb-4">
                                    <b><label for="status" class="form-label">Status:</label></b>
                                    <div class="dropdown">
                                        <button class="w-100 btn btn-secondary dropdown-toggle" type="button" id="status_dropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Choose Status
                                        </button>
                                        <ul class="w-100 dropdown-menu row" aria-labelledby="status_dropdown" style="max-height: 1000%; overflow-y: scroll;">
                                        {{#each status}}
                                            <li><input type="checkbox" name="status" id="status-{{id}}" value="{{id}}" class=" col-1 form-check-input"><label for="status-{{id}}" class="form-check-label col-11 d-inline-block text-truncate">{{status}}</label></li>
                                        {{/each}}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-2 mb-4">
                                    <b><label for="qaqc" class="form-label">Assigned Person:</label></b>
                                    <div class="dropdown">
                                        <button class="w-100 btn btn-secondary dropdown-toggle" type="button" id="qaqc_dropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Choose Assigned Personnel
                                        </button>
                                        <ul class="w-100 dropdown-menu row" aria-labelledby="qaqc_dropdown" style="max-height: 1000%; overflow-y: scroll;">
                                        {{#each qaqc}}
                                            <li><input type="checkbox" name="qaqc" id="qaqc-{{id}}" value="{{id}}" class=" col-1 form-check-input"><label for="qaqc-{{id}}" class="form-check-label col-11 d-inline-block text-truncate">{{name}}</label></li>
                                        {{/each}}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-4 mb-4">
                                    <div class="dropdown row">
                                        <div class="col-sm-12 col-md-6">
                                            <div class="">
                                                <b><label for="start_date" class="form-label">Start Date</label></b>
                                                <input class="form-control" type="date" id="start_date" name="start_date" min="{{startdate}}" max="{{enddate}}">
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <div class="">
                                                <b><label for="end_date" class="form-label">End Date</label></b>
                                                <input class="form-control" type="date" id="end_date" name="end_date" min="{{startdate}}" max="{{enddate}}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-2 mb-4">
                                    <button class="btn btn-secondary w-auto" id="apply_filter">Apply filters</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row flex-grow-1 w-100 mx-auto">
                        <div style="width: 100%;" id="table_container">
                            <table id="tickets" aria-live="polite" class="table table-responsive compact border rounded table-sm" style="width: 100%;" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Control Number</th>
                                        <th>Date Posted</th>
                                        <th>email Address</th>
                                        <th>Property</th>
                                        <th>Concern</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                {{#each concern}}
                                    <tr class="table-{{color_class}}">
                                        <td>{{control_number}}</td>
                                        <td>{{timestamp}}</td>
                                        <td style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 0">{{email_address}}</td>
                                        <td style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 0">{{property}}</td>
                                        <td>{{concern}}</td>
                                        <td>{{status}}</td>
                                        <td><button onclick="window.location.href='/ticket?control_number={{control_number}}'">View Ticket</button></td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>