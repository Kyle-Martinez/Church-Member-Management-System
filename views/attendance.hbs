<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        {{! Bootstrap CDN }}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        {{! jQuery CDN }}
        <script
            src="https://code.jquery.com/jquery-3.6.1.js"
            integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
            crossorigin="anonymous"
        ></script>

        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/attendance.css" />
        <script type="text/javascript" src="/js/attendance.js"></script>
        <title>Document</title>
    </head>

    <body>
        <div class="container-fluid h-100">
            <div>
                {{> navbar}}
            </div>
            <div class="content">
                <form id="attendance">
                    <div class="mb-3">
                        <label for="phonenum" class="form-label">Phone Number</label>
                        <input
                            type="number"
                            class="form-control"
                            id="phonenum"
                        />
                        <p id="errorText"></p>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input
                            class="form-control"
                            type="text" id="name"
                            value=""
                            aria-label="Disabled input example"
                            disabled>
                    </div>
                    
                    <div class="mb-3">
                        <label for="session" class="form-label">Session</label>
                        <select name="session" class="form-select" id="session">
                            <option selected disabled hidden value = "Select Session">Select Session</option>
                            <option value="MorningSession">Morning Session</option>
                            <option value="AfternoonSession">Afternoon Session</option>
                            <option value="LifeJourney">Life's Journey</option>
                        </select>
                    </div>

                    {{!-- <p id="errorText"></p>
                    <button
                        type="button"
                        id="submit"
                        class="btn btn-dark"
                    >Record Attendance</button> --}}
                </form>
                <button id="submit" class="btn btn-dark">Record Attendance</button>
            </div>
        </div>

        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
    </body>

</html>