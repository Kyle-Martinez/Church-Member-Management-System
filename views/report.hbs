<html>
    <head>
        <title>IT Request Form - iFAE Concerns</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/report.js"></script>
    </head>
    <body>
        <div class="container-fluid h-100 d-flex flex-column">
            {{> navbar}}
            <div class="row h-100  mx-1">
                <div class="col-12 d-flex flex-column ">
                    <div class="row " style="height:5%">
                        <h2>iFAE Incident Reports Summary</h2>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <div class="mb-4">
                                <b><label for="start_date" class="form-label">Start Date</label></b>
                                <input class="form-control" type="date" id="start_date" name="start_date" min="{{startdate}}" max="{{enddate}}">
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="mb-4">
                                <b><label for="end_date" class="form-label">End Date</label></b>
                                <input class="form-control" type="date" id="end_date" name="end_date" min="{{startdate}}" max="{{enddate}}" disabled>
                            </div>
                        </div>
                        <div class="col-2 d-flex">
                            <div class="mb-4 h-50 w-100 align-self-end">
                                <button type="button" class="h-100 w-100 btn btn-secondary btn-lg btn-block" id="apply_filter" disabled>Apply Filters</button>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row flex-grow-1">
                        <div class="col-12 d-flex flex-column">
                            <div class="row">
                                <h4>By Status</h4>
                            </div>
                            
                            <div class="row flex-grow-1 d-flex flex-row justify-content-between " id="statuscontainer">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row flex-grow-1">
                        <div class="col-12 d-flex flex-column">
                            <div class="row">
                                <h4>By Error Type</h4>
                            </div>
                            
                            <div class="row flex-grow-1 d-flex flex-row justify-content-between " id="errorcontainer">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row flex-grow-1">
                        <div class="col-12 d-flex flex-column">
                            <div class="row">
                                <h4>By Category</h4>
                            </div>
                            
                            <div class="row flex-grow-1 d-flex flex-row justify-content-between " id="categorycontainer">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row flex-grow-1">
                        <div class="col-12 d-flex flex-column">
                            <div class="row">
                                <h4>Top 5 Properties By Request</h4>
                            </div>
                            
                            <ol class="row list-group-numbered" id="toppropertycontainer">
                            </ol>
                        </div>
                    </div>
                </div>
	        </div>
        </div>
    </body>
</html>