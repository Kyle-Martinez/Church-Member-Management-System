        <title>Church Name</title>
    </head>
    <body>
        <div class="container-fluid h-100">
            <div>
                <!-- NAVIGATION BAR -->
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="admin.html">
                            <!-- TODO: src and alt -->
                            <img
                                id="logo"
                                src="/images/logo.png"
                                alt="Church"
                            />
                        </a>

                        <!-- This button will show up as a burger in smaller screens -->
                        <button
                            class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation"
                        >
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div
                            class="collapse navbar-collapse"
                            id="navbarSupportedContent"
                        >
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="members.html"
                                        >Start a Session</a
                                    >
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="members.html"
                                        >All Sessions</a
                                    >
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="members.html"
                                        >Members</a
                                    >
                                </li>

                                <li class="nav-item ms-auto">
                                    <a class="nav-link" href="login.html"
                                        >Logout</a
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <div class="content">
                <div class="d-flex flex-row justify-content-between">
                    <div>
                        <p id="navigation">Sessions</p>
                    </div>
                    <div>
                        <p id="date">October 12, 2022</p>
                    </div>
                </div>

                <div>
                    <table class="table">
                        <caption>
                            COUNT:&ensp;1
                        </caption>
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Session Type</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <!-- this is a sample row for reference, but should be deleted before live -->
                        <tbody>
                            <tr>
                                <td>
                                    <a href="session.html">12/31/2022</a>
                                </td>
                                <td>Morning Session</td>
                                <td class="right-align">
                                    <button
                                        type="button"
                                        id="delete"
                                        aria-label="delete-button"
                                    >
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <!-- this is a sample row for reference, but should be deleted before live -->
                    </table>
                </div>
            </div>
        </div>

        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
